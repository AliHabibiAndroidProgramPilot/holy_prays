<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HolyPrays" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize theme here. -->
        <item name="android:statusBarColor">@color/new_dark_green</item>
        <item name="android:colorEdgeEffect">@color/stroke_green</item>
        <item name="colorControlHighlight">@color/ripple_dark_color</item>
    </style>

    <style name="Theme.HolyPrays" parent="Base.Theme.HolyPrays" />

    <style name="roundedImageView" parent="Base.Theme.HolyPrays">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/low_white</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Material.Dialog.Alert" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text</item>
        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextAppearance.MaterialComponents.Body2</item>

    </style>

    <style name="MyTitle_MaterialAlertDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iran_sans_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextAppearance.MaterialComponents.Body2" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/iran_sans_regular</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/pray_list_items_bg"
    android:gravity="center_horizontal|start"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/recycler_item_logo"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_green" />

    <TextView
        android:id="@+id/txt_pray_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/iran_sans_regular"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="سوره واقعه" />

    <TextView
        android:id="@+id/txt_pray_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:fontFamily="@font/iran_sans_regular"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="11sp"
        android:textStyle="italic"
        android:visibility="invisible"
        tools:text="آیه 12 الی 78" />

</LinearLayout>